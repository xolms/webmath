mixin top_mnu(classhref,name,color)
	li.top_mnu_item
		a(href="#" class="top_mnu_href "+classhref+' ' +color)=name
mixin top_mnu_active(classhref,name,color)
	li.top_mnu_item.active
		a(href="#" class="top_mnu_href "+classhref+' ' +color)=name
mixin top_mnu_publish
	li.top_mnu_item.publish_item
		a(href="#" class="top_mnu_href publish_href") Опубликовать
mixin right_dropdown_mnu(name,color)
	li.right_dropdown_mnu_item
		a(href="#" class="right_dropdown_mnu_href " +color)=name		
mixin right_button(name,classhref,color)
	li.right_button_item
		a(href="#" class="right_button_href")
			span(class='right_button_img bgi img_'+classhref)
			span(class='right_button_text '+color+' text_'+classhref)=name
mixin right_button_notext(classhreff)
	li.right_button_item
		a(href="#" class="right_button_href")
			span(class='right_button_img bgi img_'+classhreff)
mixin body_left_mnu_item(text)
