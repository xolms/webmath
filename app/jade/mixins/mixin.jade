mixin accardion_wrap(text)
	.accardion_item_wrap
		.accordion_dropdown
			i.fa.fa-chevron-right.left_arrow_accardion
			span.text_accardion=text
		include ../sectiontemplate/leftacaritems		

mixin accardion_item(text)
	li.accardion_item
		a(href="#" class="accardion_link")=text
mixin accardion_item_active(text)
	li.accardion_item.active
		a(href="#" class="accardion_link")=text
mixin book_filter_item(text,link)
	.book_filter_item
		.book_filter_title.display_inline=text
		a(href="#").book_filter_link.display_inline=link
mixin book_filter_item_tolink(text,link1,link2)
	.book_filter_item
		.book_filter_title.display_inline=text
		a(href="#").book_filter_link.display_inline=link1
		a(href="#").book_filter_link=link2		

